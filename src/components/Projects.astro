---
import type { Translations } from "../i18n/translations";
import { ChevronDown, ChevronUp } from "lucide-astro";

interface Props {
  t: Translations;
  lang: "es" | "en";
}

const { t, lang } = Astro.props;

const featuredProjects = [
  {
    name: "Liz",
    image: "/projects/liz.png",
    category: "Landing Page",
  },
  {
    name: "Zatobox",
    image: "/projects/zatobox.png",
    category: "E-commerce",
  },
  {
    name: "Consentido Cognitivo",
    image: "/projects/consentido.png",
    category: "Web Platform",
  },
  {
    name: "Zynee",
    image: "/projects/zynee.png",
    category: "Web App",
  },
];

const moreProjects = [
  {
    name: "Zzyn",
    image: "/projects/zzyn.png",
    category: "Website",
  },
  {
    name: "Zynner Solutions",
    image: "/projects/zynner-solutions.png",
    category: "Corporate",
  },
  {
    name: "Portfolio",
    image: "/projects/portfolio.png",
    category: "Personal",
  },
  {
    name: "Gym Master",
    image: "/projects/gym-master.jpg",
    category: "Fitness",
  },
  {
    name: "XView",
    image: "/projects/xview.jpg",
    category: "App",
  },
  {
    name: "Bycarket",
    image: "/projects/bycarket.jpg",
    category: "Marketplace",
  },
];

const showMore = lang === "es" ? "Ver m√°s proyectos" : "Show more projects";
const showLess = lang === "es" ? "Ver menos" : "Show less";
---

<section id="projects" class="projects">
  <div class="container">
    <div class="section-header" data-animate>
      <h2 class="section-title">{t.projects.title}</h2>
      <p class="section-subtitle">{t.projects.subtitle}</p>
    </div>

    <div class="projects-grid">
      {
        featuredProjects.map((project, index) => (
          <article class="project-card" data-animate data-delay={index * 150}>
            <div class="project-image">
              <img src={project.image} alt={project.name} loading="lazy" />
              <div class="project-overlay" />
            </div>
            <div class="project-info">
              <span class="project-category">{project.category}</span>
              <h3 class="project-name">{project.name}</h3>
            </div>
          </article>
        ))
      }
    </div>

    <div class="more-projects-wrapper">
      <div class="more-projects" id="more-projects">
        {
          moreProjects.map((project) => (
            <article class="project-card small">
              <div class="project-image">
                <img src={project.image} alt={project.name} loading="lazy" />
                <div class="project-overlay" />
              </div>
              <div class="project-info">
                <span class="project-category">{project.category}</span>
                <h3 class="project-name">{project.name}</h3>
              </div>
            </article>
          ))
        }
      </div>
    </div>

    <div class="show-more-wrapper">
      <button
        class="show-more-btn"
        id="show-more-btn"
        data-show-text={showMore}
        data-hide-text={showLess}
      >
        <span class="btn-text">{showMore}</span>
        <ChevronDown size={18} strokeWidth={2} class="icon-down" />
        <ChevronUp size={18} strokeWidth={2} class="icon-up" />
      </button>
    </div>
  </div>
</section>

<style>
  .projects {
    padding: 6rem 2rem;
    background: #fafafa;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s ease;
  }

  .section-header.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: var(--color-dot-shadow);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .project-card {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    background: white;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    transition: all 0.4s ease;
    opacity: 0;
    transform: translateY(50px);
  }

  .project-card.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .more-projects .project-card {
    opacity: 1;
    transform: translateY(0);
  }

  .project-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .more-projects .project-card:hover {
    transform: translateY(-8px);
  }

  .project-card:hover .project-overlay {
    opacity: 1;
  }

  .project-card:hover .project-image img {
    transform: scale(1.05);
  }

  .project-image {
    position: relative;
    aspect-ratio: 16 / 10;
    overflow: hidden;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .project-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .project-info {
    padding: 1.5rem;
  }

  .project-category {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-dot-purple-700);
    background: var(--color-dot-purple-50);
    padding: 0.35rem 0.75rem;
    border-radius: 4px;
    margin-bottom: 0.75rem;
  }

  .project-name {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1a1a1a;
  }

  .more-projects-wrapper {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.6s ease;
  }

  .more-projects-wrapper.expanded {
    max-height: 4000px;
  }

  .more-projects {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    padding-top: 2rem;
  }

  .project-card.small .project-info {
    padding: 1.25rem;
  }

  .project-card.small .project-name {
    font-size: 1.1rem;
  }

  .show-more-wrapper {
    display: flex;
    justify-content: center;
    margin-top: 3rem;
  }

  .show-more-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    font-size: 0.95rem;
    font-weight: 600;
    font-family: inherit;
    color: #1a1a1a;
    background: white;
    border: 1px solid rgba(0, 0, 0, 0.12);
    border-radius: 100px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .show-more-btn:hover {
    border-color: var(--color-dot-green-500);
    background: var(--color-dot-green-50);
  }

  .show-more-btn .icon-up {
    display: none;
  }

  .show-more-btn.expanded .icon-down {
    display: none;
  }

  .show-more-btn.expanded .icon-up {
    display: block;
  }

  @media (max-width: 900px) {
    .more-projects {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .projects {
      padding: 4rem 1.5rem;
    }

    .projects-grid {
      grid-template-columns: 1fr;
    }

    .more-projects {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: 2rem;
    }
  }
</style>

<script>
  const animateElements = document.querySelectorAll("#projects [data-animate]");

  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const delay = entry.target.getAttribute("data-delay") || 0;
          setTimeout(
            () => {
              entry.target.classList.add("visible");
            },
            parseInt(delay as string),
          );
          observer.unobserve(entry.target);
        }
      });
    },
    {
      threshold: 0.1,
      rootMargin: "0px 0px -50px 0px",
    },
  );

  animateElements.forEach((el) => observer.observe(el));

  const showMoreBtn = document.getElementById("show-more-btn");
  const moreProjectsWrapper = document.querySelector(".more-projects-wrapper");
  const btnText = showMoreBtn?.querySelector(".btn-text");

  showMoreBtn?.addEventListener("click", () => {
    const isExpanded = moreProjectsWrapper?.classList.toggle("expanded");
    showMoreBtn.classList.toggle("expanded");

    if (btnText && showMoreBtn) {
      const showText = showMoreBtn.getAttribute("data-show-text") || "";
      const hideText = showMoreBtn.getAttribute("data-hide-text") || "";
      btnText.textContent = isExpanded ? hideText : showText;
    }
  });
</script>
