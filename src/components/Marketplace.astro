---
import type { Translations } from "../i18n/translations";
import {
  ShoppingCart,
  Mail,
  Github,
  Wallet,
  CreditCard,
  CheckCircle2,
  Play,
  ArrowRight,
} from "lucide-astro";

interface Props {
  t: Translations;
}

const { t } = Astro.props;

const products = [
  {
    id: "landing",
    name: t.market.items.landing.name,
    priceARS: t.market.items.landing.priceARS,
    priceUSD: t.market.items.landing.priceUSD,
    mpLink: "https://mpago.la/2EQWepT",
    image: "/templates/landing-template.png",
    video: "/preview/preview.mp4",
    desc: t.market.items.landing.aboutDesc,
    topics: [
      "React",
      "Portfolio",
      "Marketing",
      "Astro 5",
      "Professional",
      "Tailwind CSS 4",
      "Framer Motion",
      "Lucide React",
      "Hexagonal Architecture",
    ],
  },
  {
    id: "blog",
    name: t.market.items.blog.name,
    priceARS: t.market.items.blog.priceARS,
    priceUSD: t.market.items.blog.priceUSD,
    mpLink: "https://mpago.la/2qSZUuE",
    image: "/templates/blog-template.png",
    video: "/preview/blog-preview.mp4",
    desc: t.market.items.blog.aboutDesc,
    topics: [
      "Blog",
      "SEO Optimized",
      "Astro 5",
      "Content Collections",
      "Dynamic Routing",
      "Tailwind CSS 4",
      "Framer Motion",
      "Responsive Design",
      "TypeScript",
    ],
  },
];

const productsJson = JSON.stringify(products);
---

<section id="market" class="market">
  <div class="container">
    <div class="section-header" data-animate>
      <h2 class="section-title">{t.market.title}</h2>
      <p class="section-subtitle">{t.market.subtitle}</p>
    </div>

    <div class="showroom-grid" data-animate data-delay="100">
      {
        products.map((product) => (
          <button
            class="showroom-item"
            data-product-id={product.id}
            id={`btn-${product.id}`}
          >
            <div class="item-preview">
              <img src={product.image} alt={product.name} />
              <div class="item-overlay">
                <span class="view-details">
                  {t.market.buyNow} <ArrowRight size={16} />
                </span>
              </div>
            </div>
            <div class="item-info">
              <h3 class="item-name">{product.name}</h3>
              <div class="item-price">
                <span>{product.priceARS}</span>
                <span class="price-dot" />
                <span>{product.priceUSD}</span>
              </div>
            </div>
          </button>
        ))
      }
    </div>

    <div
      class="product-display"
      id="product-display"
      data-animate
      data-delay="200"
    >
      <div class="market-grid">
        <div class="product-preview" id="active-preview">
          <div class="media-container" id="media-container">
            <div class="poster-preview" id="poster-preview">
              <img
                src={products[0].image}
                alt="Template Preview"
                class="poster-image"
                id="active-image"
              />
              <button
                class="play-trigger"
                id="play-video-btn"
                aria-label="Play video preview"
              >
                <Play size={32} fill="currentColor" />
              </button>
            </div>

            <div class="video-wrapper hidden" id="video-wrapper">
              <video
                id="template-video-player"
                src={products[0].video}
                controls
                loop
                muted
                playsinline
                class="template-video"></video>
            </div>
          </div>

          <div class="product-details">
            <div class="about-section">
              <h3 class="detail-title">{t.market.aboutTitle}</h3>
              <p class="about-desc" id="active-desc">{products[0].desc}</p>
            </div>

            <div class="topics-section">
              <h3 class="detail-title">{t.market.topicsTitle}</h3>
              <div class="topics-grid" id="active-topics">
                {
                  products[0].topics.map((topic) => (
                    <span class="topic-tag">{topic}</span>
                  ))
                }
              </div>
            </div>
          </div>
        </div>

        <div class="payment-card" id="active-payment">
          <div class="pricing-header">
            <div class="price-options">
              <div class="price-item">
                <span class="currency">ARS</span>
                <span class="amount" id="active-price-ars"
                  >{products[0].priceARS}</span
                >
              </div>
              <div class="price-divider"></div>
              <div class="price-item">
                <span class="currency">USD</span>
                <span class="amount" id="active-price-usd"
                  >{products[0].priceUSD}</span
                >
              </div>
            </div>
          </div>

          <div class="payment-methods">
            <div class="method">
              <h4 class="method-title">
                <CreditCard size={20} class="method-icon" />
                Mercado Pago (ARS)
              </h4>
              <a
                href={products[0].mpLink}
                target="_blank"
                rel="noopener noreferrer"
                class="buy-button mp-button"
                id="active-mp-link"
              >
                <ShoppingCart size={20} />
                {t.market.buyNow}
              </a>
            </div>

            <div class="method crypto">
              <h4 class="method-title">
                <Wallet size={20} class="method-icon" />
                {t.market.cryptoTitle}
              </h4>
              <p class="crypto-desc">{t.market.cryptoDesc}</p>
              <div class="wallet-address">
                <code>0xf2f000a27e36778597f79d9fb38ce31841a3f028</code>
              </div>
              <p class="crypto-hint">USDT / USDC (Polygon)</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="post-payment-section" data-animate data-delay="300">
      <div class="post-payment-content">
        <div class="instruction-header">
          <CheckCircle2 size={32} class="instruction-icon" />
          <h4 class="instruction-title">{t.market.postPaymentTitle}</h4>
        </div>
        <p class="instruction-text">{t.market.postPaymentDesc}</p>

        <div class="post-payment-grid">
          <ul class="requirements-list">
            <li>
              <Mail size={18} />
              Email de GitHub
            </li>
            <li>
              <Github size={18} />
              Usuario de GitHub
            </li>
            <li>
              <Github size={18} />
              Link al Perfil
            </li>
          </ul>

          <div class="contact-info">
            <div class="emails-container">
              <a href="mailto:dot_studio_dev@gmail.com" class="email-link">
                dot_studio_dev@gmail.com
              </a>
              <span class="email-separator">o</span>
              <a
                href="mailto:franespindola71@gmail.com"
                class="email-link secondary"
              >
                franespindola71@gmail.com
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

